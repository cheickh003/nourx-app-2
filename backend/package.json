{
  "name": "@nourx/backend",
  "version": "1.0.0",
  "description": "API Backend pour Nourx-app",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "migrate": "node-pg-migrate -f config/database.js",
    "migrate:up": "npm run migrate up",
    "migrate:down": "npm run migrate down",
    "migrate:create": "node-pg-migrate -f config/database.js create",
    "seed": "tsx src/scripts/seed.ts",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "type-check": "tsc --noEmit",
    "docker:up": "cd ../infra && docker-compose up -d",
    "docker:down": "cd ../infra && docker-compose down",
    "docker:logs": "cd ../infra && docker-compose logs -f postgres",
    "setup": "cd ../infra && chmod +x setup.sh && ./setup.sh"
  },
  "keywords": [
    "api",
    "express",
    "typescript",
    "postgresql",
    "better-auth"
  ],
  "author": "NOURX Team",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@nourx/shared": "file:../shared",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.4.5",
    "pg": "^8.11.5",
    "kysely": "^0.27.4",
    "zod": "^3.23.8",
    "pino": "^9.1.0",
    "pino-http": "^10.1.0",
    "pino-pretty": "^11.2.1",
    "better-auth": "^0.7.1",
    "nodemailer": "^6.9.14",
    "express-rate-limit": "^7.3.1",
    "express-validator": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "mime-types": "^2.1.35",
    "uuid": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "date-fns": "^3.6.0",
    "node-pg-migrate": "^7.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/pg": "^8.11.6",
    "@types/nodemailer": "^6.4.15",
    "@types/multer": "^1.4.11",
    "@types/mime-types": "^2.1.4",
    "@types/uuid": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "typescript": "^5.5.2",
    "tsx": "^4.16.2",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "prettier": "^3.3.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}