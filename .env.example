JWT_REFRESH_EXPIRES_IN=7d

# SMTP Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@nourx.com
SMTP_FROM_NAME=NOURX
SMTP_TLS_REJECT_UNAUTHORIZED=true

# Email Configuration
