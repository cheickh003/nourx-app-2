# Database Configuration (DB runs via Docker in dev)
DATABASE_URL=postgresql://nourx_user:nourx_password@localhost:5433/nourx
DB_HOST=localhost
DB_PORT=5433
DB_NAME=nourx
DB_USER=nourx_user
DB_PASSWORD=nourx_password

# API Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# JWT Configuration
JWT_ACCESS_SECRET=your-jwt-access-secret-key-change-in-production-this-should-be-long-and-random
