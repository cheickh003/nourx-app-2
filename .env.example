# Configuration Base de Données
POSTGRES_HOST=localhost
POSTGRES_PORT=5434
POSTGRES_USER=nourx
POSTGRES_PASSWORD=nourx_dev_password
POSTGRES_DB=nourx_app

# Base de Données de Test
POSTGRES_TEST_HOST=localhost
POSTGRES_TEST_PORT=5433
POSTGRES_TEST_USER=nourx_test
POSTGRES_TEST_PASSWORD=test_password
POSTGRES_TEST_DB=nourx_app_test

# Configuration Serveur
NODE_ENV=development
PORT=3001
HOST=localhost

# Configuration Better Auth
BETTER_AUTH_SECRET=your-32-character-secret-key-here
# IMPORTANT: When the frontend proxies /api/auth to the backend,
# Better Auth must use the PUBLIC origin (frontend) for origin checks.
# Using the backend origin here will cause "Invalid origin" errors.
BETTER_AUTH_URL=http://localhost:3000

# Configuration JWT
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Configuration Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME="Nourx Support"
SMTP_FROM_EMAIL=support@nourx.com

# Configuration CORS
CORS_ORIGIN=http://localhost:3000

# Configuration Logs
LOG_LEVEL=info

# Configuration Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# Configuration Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./storage/uploads

# Configuration Admin par défaut
DEFAULT_ADMIN_EMAIL=admin@nourx.com
DEFAULT_ADMIN_PASSWORD=SecurePassword123!
DEFAULT_ADMIN_NAME="Admin NOURX"

# Configuration SLA (en heures)
DEFAULT_TICKET_SLA_RESPONSE=8
DEFAULT_TICKET_SLA_RESOLUTION=48
